<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/circular_pro_book</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.SlideTransition</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_Opposite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/circular_pro_book</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.SlideTransition_Opposite</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_NoTransition" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/circular_pro_book</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.SlideTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.FadeTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.SlideTransition_Opposite">
        <item name="android:windowEnterAnimation">@anim/slide_out</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
