<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorLight</item>
        <item name="android:fontFamily">@font/circular_pro_book</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.SlideTransition</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.SlideTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
    </style>

    <style name="AppTheme.FadeTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>
</resources>
